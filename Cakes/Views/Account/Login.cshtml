@model Cakes.ViewModels.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
       <link href="~/css/loginstyle.css" rel="stylesheet" />
    <title></title>
</head>
<body>
    <div class="login-page">
        <div class="form">
            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <input type="text" placeholder="Email" asp-for="Email" />
                <input type="password" placeholder="Password" asp-for="Password" />
                <span asp-validation-for="Password"></span>
                <button>Login</button>
                <p class="message">Not registered? <a asp-controller="Account" asp-action="Register">Create an account</a></p>
            </form>
        </div>
    </div>
</body>
</html>

